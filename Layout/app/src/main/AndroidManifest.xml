<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cursoandroid.layout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <!--android:screenOrientation="sensor" essa linha de comando faz com que o aplicativo siga a orientação do celular, podendo ser tanto na vertical, quanto na horizontal-->
    <!--android:screenOrientation="landscape" essa linha de comando faz com que o aplicativo fique na horizontal-->
    <!--android:screenOrientation="portrait" essa linha de comando faz com que o aplicativo fique na vertical-->
</manifest>